# Nerva Supply Chain Intelligence - API Configuration
# Copy this file to .env and fill in your actual API keys

# SendGrid Configuration (Email Delivery)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=alerts@your-company.com
SENDGRID_FROM_NAME=Your Company Supply Chain Intelligence

# Twilio Configuration (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1-555-YOUR-NUMBER

# WhatsApp Business API (via Twilio)
TWILIO_WHATSAPP_SID=your-whatsapp-business-sid
TWILIO_WHATSAPP_TOKEN=your-whatsapp-business-token
WHATSAPP_FROM_NUMBER=whatsapp:+14155238886

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams Integration  
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR-TEAMS-WEBHOOK

# Alert Configuration
ALERT_RETRY_ATTEMPTS=3
ALERT_TIMEOUT_MS=10000
ALERT_BATCH_SIZE=100

# Database Configuration (for logging)
DATABASE_URL=postgresql://user:password@localhost:5432/nerva_alerts
REDIS_URL=redis://localhost:6379

# Monitoring & Analytics
DATADOG_API_KEY=your-datadog-key
SENTRY_DSN=your-sentry-dsn

# Security
API_SECRET_KEY=your-secret-key-for-webhook-verification
ENCRYPT_SENSITIVE_DATA=true

# Rate Limiting
MAX_ALERTS_PER_HOUR=1000
MAX_ALERTS_PER_CLIENT=50