# Air Freight App Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# AI & INTELLIGENCE APIs
# =============================================================================

# OpenAI API Key (for cargo classification and route optimization)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google API Key (for Firebase and Maps integration)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# SHIPPING & LOGISTICS APIs
# =============================================================================

# AIS Hub (for vessel tracking)
# Get from: https://www.aishub.net/
AISHUB_USERNAME=your-aishub-username

# Datalastic API (for container tracking)
# Get from: https://datalastic.com/
DATALASTIC_API_KEY=your-datalastic-api-key

# SeaRates API (for shipping rates)
# Get from: https://www.searates.com/reference/api/
SEARATES_API_KEY=your-searates-api-key

# =============================================================================
# WEATHER APIs
# =============================================================================

# Open-Meteo Marine Weather API (FREE - no key required)
# Documentation: https://open-meteo.com/en/docs/marine-weather-api
WEATHER_API_ENABLED=true
WEATHER_API_PROVIDER=open-meteo

# =============================================================================
# WHATSAPP INTEGRATION APIs
# =============================================================================

# Choose ONE provider: meta, twilio, chatapi, or none
WHATSAPP_PROVIDER=none

# Meta WhatsApp Business API (Production Ready)
# Get from: https://developers.facebook.com/docs/whatsapp
META_ACCESS_TOKEN=your-meta-access-token
META_PHONE_NUMBER_ID=your-phone-number-id

# Twilio WhatsApp API (Easy Setup)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ChatAPI.com (Quickest Setup)
# Get from: https://chat-api.com/
CHATAPI_INSTANCE_ID=instance123456
CHATAPI_TOKEN=your-chatapi-token

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_VERSION=1.0.0
DEBUG_MODE=true
CACHE_DURATION=600000
API_TIMEOUT=30000
RATE_LIMIT_ENABLED=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

ENABLE_API_KEY_VALIDATION=true
ALLOW_DEMO_MODE=true
LOG_API_CALLS=false

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env
# 2. Fill in your API keys above
# 3. Run: npm run build
# 4. Test with: npm run dev
# 5. Check API status in browser console

# SECURITY WARNING:
# - Never commit .env file to git
# - Use server-side proxy for production
# - Rotate API keys regularly
# - Monitor API usage and costs